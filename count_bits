// Cpp program to count number of '1' bit in a number in it's binary form
#include<iostream>
using namespace std;
int main() {
    int n, count = 0;
    cout << "enter the number : ";
    cin >> n;
    int n1 = n;
    while (n != 0) {
        if (n & 1) {
            count++;
        }
        n = n >> 1;
    }
    cout << "Number of '1' bits in " << n1 << " is " << count << endl;
}
